{
    "id": "product-showcase-01",
    "name": "Product Spotlight",
    "description": "Highlight a single product with elegant styling",
    "category": "product",
    "formats": {
        "facebook": {
            "width": 1200,
            "height": 630,
            "background": "#FFFFFF",
            "elements": [
                {
                    "type": "rect",
                    "role": "color_block",
                    "left": 0,
                    "top": 0,
                    "width": 500,
                    "height": 630,
                    "fill": "{{colors.primary}}"
                },
                {
                    "type": "image",
                    "role": "logo",
                    "source": "{{logo_url}}",
                    "left": 50,
                    "top": 50,
                    "scaleToWidth": 100
                },
                {
                    "type": "text",
                    "role": "headline",
                    "content": "{{generated_headline}}",
                    "prompt": "Write a product feature headline, 2-3 words like 'NEW ARRIVAL' or 'BEST SELLER'",
                    "left": 50,
                    "top": 250,
                    "fontSize": 64,
                    "fontWeight": "bold",
                    "fontFamily": "Arial",
                    "fill": "#FFFFFF"
                },
                {
                    "type": "text",
                    "role": "description",
                    "content": "{{generated_description}}",
                    "prompt": "Write a brief product description, max 10 words highlighting quality or features",
                    "left": 50,
                    "top": 340,
                    "fontSize": 24,
                    "fontWeight": "normal",
                    "fontFamily": "Arial",
                    "fill": "#FFFFFF"
                },
                {
                    "type": "text",
                    "role": "cta",
                    "content": "{{generated_cta}}",
                    "prompt": "Write a call-to-action like 'Discover More' or 'Shop Now', max 2 words",
                    "left": 50,
                    "top": 500,
                    "fontSize": 28,
                    "fontWeight": "bold",
                    "fontFamily": "Arial",
                    "fill": "{{colors.secondary}}"
                },
                {
                    "type": "image",
                    "role": "product_image",
                    "source": "{{asset_urls.0}}",
                    "left": 600,
                    "top": 65,
                    "scaleToWidth": 500
                }
            ]
        },
        "instagram_post": {
            "width": 1080,
            "height": 1080,
            "background": "#FFFFFF",
