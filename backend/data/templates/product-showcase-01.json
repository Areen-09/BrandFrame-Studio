                    "height": 380,
                    "fill": "{{colors.primary}}"
                },
                {
                    "type": "image",
                    "role": "logo",
                    "source": "{{logo_url}}",
                    "left": 50,
                    "top": 50,
                    "scaleToWidth": 80
                },
                {
                    "type": "text",
                    "role": "headline",
                    "content": "{{generated_headline}}",
                    "left": 50,
                    "top": 750,
                    "fontSize": 64,
                    "fontWeight": "bold",
                    "fontFamily": "Arial",
                    "fill": "#FFFFFF"
                },
                {
                    "type": "text",
